{{ember-load-remover}}
<br>
<br>
<br>
<div class="ui stackable grid">
  <div class="four wide column"></div>
  <div class="eight wide column">
    <div class="ui blue raised segment">
      <h1 class="ui medium blue header">
        Login to your Account
      </h1>
      <br>
      <div class="ui form">
        <div class="field">
          <label for="">Enter Username</label>
          <div class="ui left icon input">
            <i class="user icon"></i>
            {{input value=this.username type="text" placeholder="username" enter=(action "redirect")}}
          </div>
        </div>
        <div class="field">
          <label for="">Enter Password</label>
          <div class="ui left icon input">
            <i class="lock icon"></i>
            {{input value=this.password type="number" placeholder="password" enter=(action "redirect")}}
          </div>
        </div>
        {{#if this.loader}}
          <div class="ui active centered inline loader"></div>
        {{else}}
          <div class="field">
            <button class="ui fluid facebook button" {{action "authenticate"}} >Login</button>
          </div>
        {{/if}}
      </div>
    </div>
  </div>
  <div class="four wide column"></div>
</div>